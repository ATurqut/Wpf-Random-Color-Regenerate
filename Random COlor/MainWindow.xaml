<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Button Example" Width="300" Height="200">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Margin="0,0,0,-40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Margin="-2,0,1,63">
            <Button Name="btn1" Content="Button 1" Background="Red" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
            <Button Name="btn2" Content="Button 2" Background="Green" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
            <Button Name="btn3" Content="Button 3" Background="Blue" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
            <Button Name="btn4" Content="Button 4" Background="Yellow" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
            <Button Name="btn5" Content="Button 5" Background="Orange" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
            <Button Name="btn6" Content="Button 6" Background="Purple" Click="Button_Click" MouseRightButtonUp="Button_MouseRightButtonUp"/>
        </StackPanel>
    </Grid>
</Window>